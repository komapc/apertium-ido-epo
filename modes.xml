<?xml version="1.0" encoding="UTF-8"?>
<modes>

  <!-- ido → epo -->
  <mode name="ido-epo" install="yes">
    <pipeline>
      <program name="lt-proc">
        <file name="ido-epo.automorf.bin"/>
      </program>
      <program name="apertium-pretransfer"/>
      <program name="lt-proc -o">
        <file name="ido-epo.autobil.bin"/>
      </program>
      <program name="apertium-transfer -b">
        <file name="apertium-ido-epo.ido-epo.t1x"/>
        <file name="ido-epo.t1x.bin"/>
      </program>
      <program name="lt-proc -g">
        <file name="ido-epo.autogen.bin"/>
      </program>
    </pipeline>
  </mode>

  <!-- epo → ido -->
  <mode name="epo-ido" install="yes">
    <pipeline>
      <program name="lt-proc">
        <file name="epo-ido.automorf.bin"/>
      </program>
      <program name="apertium-pretransfer"/>
      <program name="lt-proc -o">
        <file name="epo-ido.autobil.bin"/>
      </program>
      <program name="apertium-transfer -b">
        <file name="apertium-ido-epo.epo-ido.t1x"/>
        <file name="epo-ido.t1x.bin"/>
      </program>
      <program name="lt-proc -g">
        <file name="epo-ido.autogen.bin"/>
      </program>
    </pipeline>
  </mode>

</modes>

